---
import OxxHeader from "../components/OxxHeader.astro";
import Layout from "../layouts/Layout.astro";
import PageProvider from "../PageProvider.astro";
import QuemSou from "../components/QuemSou.astro";
import OxxAlvsHeader from "../components/OxxAlvsHeader.astro";
import TechStackSession from "@/components/ui/home/TechStackSession.astro";
import InterfacesShowcase from "@/components/ui/home/InterfacesShowcase.astro";
---

<Layout title="Alvaro Alves - OXX - Digital Solutions">
	<PageProvider>
		<OxxHeader title="index">
			<OxxAlvsHeader />
		</OxxHeader>

		<section
			class="z-20 flex flex-col items-center w-full mx-auto min-h-screen pt-20"
		>
			<div class="flex items-center lg:px-20 h-screen">
				<QuemSou />
			</div>

			<InterfacesShowcase />
			
			<TechStackSession />
		</section>
	</PageProvider>
</Layout>
